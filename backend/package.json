{
  "name": "@auth-verse/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@auth-verse/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@auth-verse/backend:build:development"
          },
          "production": {
            "buildTarget": "@auth-verse/backend:build:production"
          }
        }
      }
    }
  }
}
